<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="003" author="manan.gupta" logicalFilePath="003-alter-document-table-add-case-id-and-cleanup.xml">
        <addColumn tableName="document">
            <column name="case_id" type="UUID"/>
        </addColumn>
        <dropColumn tableName="document">
            <column name="deleted"/>
        </dropColumn>
        <dropColumn tableName="document">
            <column name="deleted_date_ts"/>
        </dropColumn>
        <rollback>
            <dropColumn tableName="document">
                <column name="status_code"/>
            </dropColumn>
            <addColumn tableName="document">
                <column name="deleted" type="BOOLEAN"/>
            </addColumn>
            <addColumn tableName="document">
                <column name="deleted_date_ts" type="TIMESTAMP WITH TIME ZONE"/>
            </addColumn>
        </rollback>
    </changeSet>

</databaseChangeLog>
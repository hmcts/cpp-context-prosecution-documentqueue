        },
        "applications": {
          "$ref": "#/definitions/volumeAndSource"
        },
        "correspondence": {
          "$ref": "#/definitions/volumeAndSource"
        },
        "other": {
          "$ref": "#/definitions/volumeAndSource"
        },
        "total": {
          "$ref": "#/definitions/volumeAndSource"
        }
      }
    },
    "volumeAndSource": {
      "type": "object",
      "properties": {
        "volume": {
          "type": "integer"
        },
        "bulkScan": {
          "type": "integer"
        }
      }
    }
  }
}
{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://justice.gov.uk/prosecution/documentqueue/domain/model/court-document.json",
  "type": "object",
  "properties": {
    "courtDocumentId": {
      "description": "The technical identifier of a document",
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "documentCategory": {
      "type": "object",
      "properties": {
        "caseDocument": {
          "type": "object",
          "properties": {
            "prosecutionCaseId": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            }
          },
          "required": [
            "prosecutionCaseId"
          ],
          "additionalProperties": false
        },
        "applicationDocument": {
          "type": "object",
          "properties": {
            "applicationId": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "prosecutionCaseId": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "defendants": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
              }
            }
          },
          "required": [
            "applicationId"
          ],
          "additionalProperties": false
        },
        "defendantDocument": {
          "type": "object",
          "properties": {
            "prosecutionCaseId": {
              "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
            },
            "defendants": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
              }
            }
          },
          "required": [
            "defendants",
            "prosecutionCaseId"
          ],
          "additionalProperties": false
        }
      },
      "oneOf": [{
        "required": [
          "caseDocument"
        ]
      },
        {
          "required": [
            "applicationDocument"
          ]
        },
        {
          "required": [
            "defendantDocument"
          ]
        }
      ]
    },
    "name": {
      "type": "string"
    },
    "mimeType": {
      "type": "string"
    },
    "documentTypeId": {
      "$ref": "http://justice.gov.uk/domain/core/common/definitions.json#/definitions/uuid"
    },
    "documentTypeDescription": {
      "type": "string"
    },
    "materials": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "http://justice.gov.uk/prosecution/documentqueue/domain/model/material.json"
      }
    },
    "containsFinancialMeans": {
      "type": "boolean"
    },
    "sendToCps": {
      "type": "boolean"
    }
  },
  "required": [
    "courtDocumentId",
    "documentCategory",
    "name",
    "documentTypeId",
    "materials",
    "containsFinancialMeans"
  ],
  "additionalProperties": false
}